<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= current_user.full_name %> <%= current_user.last_name %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3 " align="center"> 
              <% if current_user.avatar.present? %>
                <%= image_tag current_user.avatar.url, :class=>"img-circle img-responsive" %>
              <% else %>
                <img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive">
              <%end%>
            </div>
            <div class=" col-md-9 col-lg-9 "> 
              <table class="table table-user-information">
                <tbody>

                  <tr>
                    <td>First Name</td>
                    <td><%= current_user.full_name %></td>
                  </tr>

                  <tr>
                    <td>Last Name</td>
                    <td><%= current_user.last_name %></td>
                  </tr>

                  <tr>
                    <td>Date of Birth</td>
                    <td><%= current_user.dob %></td>
                  </tr>
               
                  <tr>
                    <td>Gender</td>
                    <td><%= current_user.gender %></td>
                  </tr>

                  <tr>
                    <td>Home Address</td>
                    <td>Kathmandu,Nepal</td>
                  </tr>

                  <tr>
                    <td>Email</td>
                    <td><%= current_user.email %></td>
                  </tr>

                  <tr>
                    <td>Phone Number</td>
                    <td>123-4567-890(Landline)<br><br>555-4567-890(Mobile)
                    </td>
                  </tr>
                </tbody>
              </table>
              <a href="#" class="btn btn-primary">My Sales Performance</a>
              <a href="#" class="btn btn-primary">Team Sales Performance</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>